---
import "../styles/global.css";
import { UserMenu } from "../components/dashboard/UserMenu";

interface Props {
  title?: string;
  userEmail?: string | null;
}

const { title = "SmartWordsAI", userEmail = null } = Astro.props;
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class="min-h-screen bg-gray-50">
      <!-- App Header with Navigation -->
      <header class="bg-white border-b border-gray-200 sticky top-0 z-10">
        <div class="container mx-auto px-4 py-4">
          <div class="flex items-center justify-between">
            <!-- Logo and Navigation -->
            <div class="flex items-center gap-8">
              <a href="/app/dashboard" class="text-xl font-bold text-blue-600 hover:text-blue-700 transition-colors">
                SmartWordsAI
              </a>

              <nav class="hidden md:flex items-center gap-6">
                <a
                  href="/app/dashboard"
                  class="text-gray-700 hover:text-gray-900 text-sm font-medium transition-colors"
                >
                  Dashboard
                </a>
                <a href="/app/sets" class="text-gray-700 hover:text-gray-900 text-sm font-medium transition-colors">
                  Moje zestawy
                </a>
              </nav>
            </div>

            <!-- User Menu -->
            <UserMenu userEmail={userEmail} client:load />
          </div>
        </div>
      </header>

      <!-- Main Content -->
      <main>
        <slot />
      </main>
    </div>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>

---
import Layout from "../../../layouts/Layout.astro";
import { SessionPage } from "../../../components/sessions/SessionPage";
import { UserMenu } from "../../../components/dashboard/UserMenu";

// Disable prerendering for client-side data fetching
export const prerender = false;

// Get the session ID from the URL params
const { id } = Astro.params;

if (!id) {
  return Astro.redirect("/app/dashboard");
}

// TODO: Enable authentication when auth system is implemented
// This page will require authentication in production
---

<Layout title="Sesja Ćwiczeń - SmartWordsAI">
  <main class="min-h-screen bg-gray-50">
    <div class="container mx-auto px-4 py-8">
      <!-- Top Navigation Bar -->
      <div class="mb-6 flex items-center justify-between">
        <div class="text-xl font-bold text-blue-600">SmartWordsAI</div>
        <div class="flex items-center gap-4">
          <a href="/app/dashboard" class="text-gray-600 hover:text-gray-900 transition-colors"> Dashboard </a>
          <a href="/app/sets" class="text-gray-600 hover:text-gray-900 transition-colors"> Zestawy </a>
          <UserMenu userEmail={null} client:load />
        </div>
      </div>

      <!-- React SessionPage Component -->
      <SessionPage sessionId={id} client:load />
    </div>
  </main>
</Layout>
